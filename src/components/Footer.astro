---
import LogoWhite from './shared/images/LogoWhite.astro';
import SocialMedia from './shared/Footer/SocialMedia.astro';

import Link from './shared/Link.astro';
import Button from './shared/Button.astro';

import { externalLinks } from '../data/external-links';
---

<footer class='bg-dark-blue relative px-5 pb-10 xl:px-0'>
	<div
		class='max-w-[1440px] mx-auto flex justify-between items-center p-10 flex-col-reverse lg:flex-row gap-10 lg:gap-0'
	>
		<section
			class='flex flex-col-reverse lg:flex-col h-[130px] justify-between'
		>
			<LogoWhite />
			<SocialMedia />
		</section>
		<section>
			<ul class='grid grid-cols-2 gap-5 text-gray-300'>
				{externalLinks.map((link) => <Link text={link.text} />)}
			</ul>
		</section>
		<section class='flex flex-col gap-14 h-auto lg:h-32 relative'>
			<form class='flex items-center justify-between gap-4'>
				<input
					type='email'
					placeholder='Updates in your inbox...'
					class='p-3 rounded-full outline-none text-sm w-full'
					required
				/>
				<Button text='Go' />
			</form>
			<span class='text-gray-300 absolute lg:bottom-0 -bottom-96'>
				Copyright 2020. All Rights Reserved</span
			>
		</section>
	</div>
</footer>
